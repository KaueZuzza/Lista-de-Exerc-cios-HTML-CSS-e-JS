<body>
    <script>
        var Num = prompt("Digite um número inteiro:");
        var fatorial = 1;

        for (var i = 1; i <= Num; i++) {
        fatorial = fatorial * i;
        }

        alert("O fatorial de " + Num + "! é: " + fatorial);

    </script>
</body>
