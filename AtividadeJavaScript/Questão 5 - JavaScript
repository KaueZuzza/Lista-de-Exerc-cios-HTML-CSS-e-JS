<body>
    <script>
        let temp = prompt("- Digite a temperatura: ");
        let tipo = prompt("- Digite 'c' para Celsius ou 'f' para Fahrenheit: ");

        if (tipo == "c") {
            alert("Resultado: " + ((temp - 32) * 5 / 9));
            console.log("Resultado em Celsius:", (temp - 32) * 5 / 9);
        }

        if (tipo == "f") {
            alert("Resultado: " + ((temp * 9 / 5) + 32));
            console.log("Resultado em Fahrenheit:", (temp * 9 / 5) + 32);
        }
        
    </script>
</body>
